@page
@model RawDataWebapp.Pages.LoginModel

@{
    ViewData["Title"] = "Login and Registration - Raw Data Sports";
}

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login and Registration - Sports Website</title>
        <style>
            body {
                
                padding-top: 100px;
                padding-bottom: 70px;
            }

            header {
                position: fixed;
                top: 0;
                width: 100%;
                z-index: 1030;
            }

            footer {
                position: fixed;
                bottom: 0;
                width: 100%;
            }

            .center-text {
                text-align: center;
            }
        </style>

    </head>

<body>
    <h2>Login Page</h2>

    <form action="/login" method="post">
        <div class="container">
            <label for="uname"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="uname" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>

            <button type="submit">Login</button>
        </div>
    </form>
</body>
</html>