@if (TempData["message"] != null)
{
    <script>
        toastr.info("@TempData["message"].ToString()");
    </script>
}

@if (TempData["RegistrationSuccessMessage"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["RegistrationSuccessMessage"]');
    </script>
}
@if (TempData["RegistrationErrorMessage"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["RegistrationErrorMessage"]');
    </script>
}
